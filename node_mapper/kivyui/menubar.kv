<MenuBar>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionGroup:
            text: 'File'
            ActionButton:
                text: 'Open'
                on_release: root.show_file_open()
            ActionButton:
                text: 'Save'
                on_release: root.show_file_close()
                
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel_file_dialog()
            Button:
                text: "Load"
                on_release: root.load_file(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel_file_dialog()

            Button:
                text: "Save"
                on_release: root.save_file(filechooser.path, text_input.text)
